generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
}

model User {
  id        Int      @id @default(autoincrement())
  firstName String
  lastName  String
  email     String   @unique
  password  String
  role      Role     @default(STUDENT)
  createdAt DateTime @default(now())

  studentSeminars Seminar[] @relation("StudentSeminars")
  teacherSubjects Subject[]
  teacherTopics   Topic[]
}

enum Role {
  STUDENT
  TEACHER
}

model Subject {
  id        Int       @id @default(autoincrement())
  name      String
  code      String    @unique
  teacherId Int
  teacher   User     @relation(fields: [teacherId], references: [id])
  seminars  Seminar[]
}

model Topic {
  id          Int       @id @default(autoincrement())
  title       String
  description String?
  teacherId   Int
  teacher     User      @relation(fields: [teacherId], references: [id])
  seminars    Seminar[]
}

model Seminar {
  id          Int           @id @default(autoincrement())
  title       String
  description String?
  studentId   Int
  student     User          @relation("StudentSeminars", fields: [studentId], references: [id])
  subjectId   Int
  subject     Subject       @relation(fields: [subjectId], references: [id])
  topicId     Int?
  topic       Topic?        @relation(fields: [topicId], references: [id])
  status      SeminarStatus @default(PENDING)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
}

enum SeminarStatus {
  PENDING
  APPROVED
  REJECTED
}
